%%% Imperfect Verb Suffixes
"yn.IVSUFFSUBJ" "iyna.IVSUFFSUBJ" "wn.IVSUFFSUBJ" "uwna.IVSUFFSUBJ" "n.IVSUFFSUBJ" "na.IVSUFFSUBJ" :
IVSUFFSUBJ-;

